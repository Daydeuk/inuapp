<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학기별 성적"
        android:textColor="#090909"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text=" 1학년 1학기"
                android:textColor="#0B0A0A"
                app:rippleColor="#FFFFFF" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#DADADA"
                android:backgroundTint="@color/white"
                android:text=" 1학년 2학기"
                android:textColor="#0C0C0C" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text=" 2학년 1학기" />

            <Button
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text=" 2학년 2학기"
                app:iconTint="#FFFFFF" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text=" 3학년 1학기" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text=" 3학년 2학기 "
                android:textColor="#070707" />

            <Button
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text=" 4학년 1학기 "
                android:textColor="#040404" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text=" 4학년 2학기 "
                android:textColor="#000000" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="평점"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="48dp"
        android:layout_height="27dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:text="4.43"
        android:textColor="#FFC107"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:text="이수학점"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="18"
        android:textColor="#FFC107"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <Button
        android:id="@+id/button11"
        android:layout_width="79dp"
        android:layout_height="45dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="36dp"
        android:background="#FFFFFF"
        android:text="수정하기"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="328dp"
            android:layout_height="406dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="328dp"
                android:layout_height="406dp"
                android:orientation="vertical">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="328dp"
                    android:layout_height="41dp"
                    android:background="@drawable/rounded_corner"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="164dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/header_right_stroke"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingStart="16dp"
                        android:text="과목명"
                        android:textColor="#000000"
                        android:textSize="12dp"></TextView>

                    <TextView
                        android:layout_width="54dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/header_right_stroke"
                        android:gravity="center"
                        android:text="구분"
                        android:textColor="#000000"
                        android:textSize="12dp"></TextView>

                    <TextView
                        android:layout_width="54dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/header_right_stroke"
                        android:gravity="center"
                        android:text="학점"
                        android:textColor="#000000"
                        android:textSize="12dp"></TextView>

                    <TextView
                        android:layout_width="54dp"
                        android:layout_height="match_parent"
                        android:background="#F0F0F0"
                        android:gravity="center"
                        android:text="성적"
                        android:textColor="#000000"
                        android:textSize="12dp"></TextView>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cellRecyclerView"
                    android:layout_width="328dp"
                    android:layout_height="366dp"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>